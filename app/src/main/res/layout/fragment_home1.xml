<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_height="0dp">
            <fragment
                android:id="@+id/frg"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_height="0dp">

            <androidx.cardview.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"

                android:elevation="2dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="15dp"

                >

                <View
                    android:layout_width="32dp"
                    android:layout_height="3dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@color/black">

                </View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:text="@string/pickup"
                            android:layout_width="wrap_content"
                            android:layout_marginTop="@dimen/_30sdp"
                            android:layout_marginLeft="@dimen/_19sdp"
                            android:fontFamily="@font/poppinsmedium"
                            android:layout_height="match_parent"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_13sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:orientation="horizontal">
                            <ImageView
                                android:src="@drawable/pick"
                                android:layout_marginTop="@dimen/_7sdp"
                                android:layout_width="@dimen/_12sdp"
                                android:layout_height="@dimen/_12sdp"
                                android:paddingTop="@dimen/_2sdp"

                                >

                            </ImageView>
                            <TextView
                                android:visibility="gone"
                                android:text="7958 Swfit Village"
                                android:layout_width="match_parent"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp"
                                android:fontFamily="@font/poppinsmedium"
                                android:layout_marginLeft="@dimen/_12sdp"
                                android:layout_height="wrap_content">

                            </TextView>

                            <AutoCompleteTextView
                                android:id="@+id/pickup_location_user_1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/_12sdp"
                                android:background="@null"
                                android:hint="@string/enter_pick_up_location"
                                android:fontFamily="@font/poppinsmedium"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp"
                                tools:ignore="TouchTargetSizeCheck">

                            </AutoCompleteTextView>


                        </LinearLayout>



                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dip"
                            android:layout_alignParentTop="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_30sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:background="#C8C3C3" />

                        <TextView
                            android:text="@string/drop"
                            android:layout_width="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginLeft="@dimen/_19sdp"
                            android:fontFamily="@font/poppinsmedium"
                            android:layout_height="match_parent"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_13sdp"
                            android:layout_height="@dimen/_30sdp">
                            <ImageView
                                android:src="@drawable/drop"
                                android:layout_width="@dimen/_12sdp"
                                android:layout_marginTop="@dimen/_7sdp"
                                android:layout_height="@dimen/_12sdp"
                                android:paddingTop="@dimen/_2sdp"
                                >

                            </ImageView>

                            <AutoCompleteTextView
                                android:id="@+id/drop_location_user_1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/_12sdp"
                                android:background="@null"
                                android:fontFamily="@font/poppinsmedium"
                                android:hint="@string/enter_drop_location"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp"
                                tools:ignore="TouchTargetSizeCheck">

                            </AutoCompleteTextView>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dip"
                            android:layout_alignParentTop="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_30sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:background="#C8C3C3" />
                        <TextView
                            android:text="@string/no_of_passengers"
                            android:layout_width="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginLeft="@dimen/_19sdp"
                            android:fontFamily="@font/poppinsmedium"
                            android:layout_height="match_parent"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_13sdp"
                            android:layout_height="@dimen/_25sdp">

                            <ImageView
                                android:src="@drawable/person"
                                android:layout_width="@dimen/_12sdp"
                                android:layout_height="@dimen/_12sdp"
                                android:layout_marginTop="@dimen/_7sdp"
                                android:paddingTop="@dimen/_2sdp"                            >

                            </ImageView>

                            <EditText
                                android:id="@+id/no_passenger_1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/_12sdp"
                                android:background="@null"
                                android:clickable="true"
                                android:focusable="false"
                                android:fontFamily="@font/poppinsmedium"
                                android:hint="no."
                                android:inputType="number"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp"
                                tools:ignore="TouchTargetSizeCheck">

                            </EditText>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dip"
                            android:layout_alignParentTop="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_30sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:background="#C8C3C3" />
                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:orientation="horizontal"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:padding="@dimen/_5sdp">

                            <TextView
                                android:id="@+id/search_text_tv_1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/button_corner"
                                android:fontFamily="@font/poppinsmedium"
                                android:paddingTop="@dimen/_12sdp"
                                android:text="@string/search"
                                android:textAlignment="center"
                                android:clickable="true"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_13sdp"
                                android:textStyle="bold" />
                        </LinearLayout>





                    </LinearLayout>



                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </LinearLayout>
</FrameLayout>