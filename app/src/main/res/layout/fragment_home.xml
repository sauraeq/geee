<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- TODO: Update blank fragment layout -->

    <fragment
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:id="@+id/frg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_340sdp"/>
    <LinearLayout
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_20sdp"
       android:background="@drawable/circlebck"
        android:layout_marginTop="@dimen/_20sdp">

    <ImageView
        android:id="@+id/ivMenu_home"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_gravity="center"
        android:padding="@dimen/_2sdp"
        android:src="@drawable/burgericon"
        android:layout_marginLeft="@dimen/_2sdp"
        android:visibility="visible" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<!--
        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/google_map_image"
            android:layout_height="match_parent">

        </ImageView>
-->

        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="@dimen/_285sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-8dp"
            android:elevation="2dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="15dp"

            >

            <View
                android:layout_width="32dp"
                android:layout_height="3dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@color/black">

            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                <TextView
                    android:text="@string/pickup"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_19sdp"
                    android:fontFamily="@font/poppinsmedium"
                    android:layout_height="match_parent"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_13sdp"
                        android:layout_height="@dimen/_30sdp">
                        <ImageView
                            android:src="@drawable/pick"
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="@dimen/_12sdp"
                            android:paddingTop="@dimen/_2sdp"

                            >

                        </ImageView>
                        <TextView
                            android:id="@+id/pickup_location_user"
                            android:text="7958 Swfit Village"
                            android:layout_width="match_parent"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12ssp"
                            android:fontFamily="@font/poppinsmedium"
                            android:layout_marginLeft="@dimen/_12sdp"
                            android:layout_height="wrap_content">

                        </TextView>


                    </LinearLayout>



                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:background="#C8C3C3" />

                    <TextView
                        android:text="@string/drop"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginLeft="@dimen/_19sdp"
                        android:fontFamily="@font/poppinsmedium"
                        android:layout_height="match_parent"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_13sdp"
                        android:layout_height="@dimen/_30sdp">
                        <ImageView
                            android:src="@drawable/drop"
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="@dimen/_12sdp"
                            android:paddingTop="@dimen/_2sdp"
                           >

                        </ImageView>
                        <AutoCompleteTextView
                            android:id="@+id/drop_location_user"
                           android:background="@null"
                            android:textSize="@dimen/_12ssp"
                            android:hint="@string/enter_drop_location"
                            android:layout_width="match_parent"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppinsmedium"
                            android:layout_marginLeft="@dimen/_12sdp"
                            android:layout_height="wrap_content">

                        </AutoCompleteTextView>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:background="#C8C3C3" />
                    <TextView
                        android:text="@string/no_of_passengers"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginLeft="@dimen/_19sdp"
                        android:fontFamily="@font/poppinsmedium"
                        android:layout_height="match_parent"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_13sdp"
                        android:layout_height="@dimen/_25sdp">

                        <ImageView
                            android:src="@drawable/person"
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="@dimen/_12sdp"
                            android:paddingTop="@dimen/_2sdp"                            >

                        </ImageView>
                        <EditText
                            android:id="@+id/no_passenger"
                            android:hint="2"
                            android:background="@null"
                            android:layout_width="match_parent"
                            android:textColor="@color/black"
                            android:inputType="number"
                            android:fontFamily="@font/poppinsmedium"
                            android:layout_marginLeft="@dimen/_12sdp"
                            android:textSize="@dimen/_12ssp"
                            android:layout_height="wrap_content">

                        </EditText>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:background="#C8C3C3" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:padding="@dimen/_5sdp">

                        <TextView
                            android:id="@+id/search_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/button_corner"
                            android:fontFamily="@font/poppinsmedium"
                            android:paddingTop="@dimen/_12sdp"
                            android:text="@string/search"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13sdp"
                            android:textStyle="bold" />
                    </LinearLayout>





                </LinearLayout>



            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</FrameLayout>