<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.FareDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_57sdp">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_57sdp"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:background="@drawable/headercorner"
            android:fontFamily="@font/poppinsmedium"
            android:gravity="center"
            android:text="Your Ride"
            android:textColor="@color/black"
            android:textSize="@dimen/_17sdp" />

        <ImageView
            android:id="@+id/leftarrow_fare"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_23sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:src="@drawable/fgmbckarrow" />
    </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="Your trip has been done successfully with our services, you are at your desire location."
                android:fontFamily="@font/poppinsmedium"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_width="match_parent"
                android:textSize="@dimen/_13ssp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_height="wrap_content">

            </TextView>



            <TextView
                android:text="Your ride is"
                android:fontFamily="@font/poppinsmedium"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_width="wrap_content"
                android:textSize="@dimen/_13ssp"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:id="@+id/toatal_fare_txtview"
                android:text="$25.12"
                android:textSize="@dimen/_58ssp"
                android:layout_gravity="center"
                android:textColor="#3E3E3E"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/poppinsmedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:id="@+id/cuurent_time"
                android:textSize="@dimen/_13ssp"
                android:layout_gravity="center"
                android:fontFamily="@font/poppinsmedium"
                android:text="Oct 01, 2020 at 10:30 a.m."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/_18sdp"
                android:layout_marginRight="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:padding="@dimen/_5sdp">

                <TextView
                    android:id="@+id/pay_now_fare_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_corner"
                    android:fontFamily="@font/poppinsmedium"
                    android:paddingTop="@dimen/_12sdp"
                    android:text="Pay Now"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>