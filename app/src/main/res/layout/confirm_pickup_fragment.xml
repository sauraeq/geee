<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- TODO: Update blank fragment layout -->

    <fragment
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:id="@+id/frg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_420sdp"/>
    <LinearLayout
        android:id="@+id/back_go_activity"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_16sdp"
        android:background="@drawable/circlebck"
        android:layout_marginTop="@dimen/_18sdp">

        <ImageView
            android:id="@+id/ivMenu1"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="center"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/fgmbckarrow"

            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!--
                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/google_map_image"
                    android:layout_height="match_parent">

                </ImageView>
        -->

        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="@dimen/_210sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-8dp"
            android:elevation="2dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="15dp"

            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_22sdp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_9sdp"
                            android:fontFamily="@font/poppinsmedium"
                            android:text="Choose your pick-up spot"
                            android:textSize="@dimen/_9sdp">

                        </TextView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dip"
                            android:layout_alignParentTop="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginRight="@dimen/_12sdp"
                            android:background="#C8C3C3" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:visibility="gone"
                                android:fontFamily="@font/poppinsmedium"
                                android:paddingLeft="@dimen/_10sdp"
                                android:text="105 William St, Chicago, US."
                                android:textSize="@dimen/_12sdp">

                            </TextView>
                            <AutoCompleteTextView
                                android:id="@+id/current_loc_textview"
                                android:background="@null"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_45sdp"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:layout_weight="6"
                                android:fontFamily="@font/poppinsmedium"
                                android:paddingLeft="@dimen/_10sdp"
                                android:text="105 William St, Chicago, US."
                                android:textSize="@dimen/_12sdp">

                            </AutoCompleteTextView>

                            <TextView
                                android:id="@+id/confirm_search_pickup"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/_8sdp"
                                android:layout_weight="4"
                                android:background="@drawable/rectangle_black"
                                android:fontFamily="@font/poppinsmedium"
                                android:gravity="center"
                                android:text="@string/search"
                                android:visibility="gone"
                                android:textColor="@color/black" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/confirm_pick_Up_layout"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_marginLeft="@dimen/_18sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginRight="@dimen/_18sdp"
                            android:orientation="horizontal"
                            android:padding="@dimen/_5sdp">

                            <TextView
                                android:id="@+id/pick_up_confirm"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/button_corner"
                                android:fontFamily="@font/poppinsmedium"
                                android:paddingTop="@dimen/_12sdp"
                                android:text="@string/confirm_pick_up"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_13sdp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</FrameLayout>